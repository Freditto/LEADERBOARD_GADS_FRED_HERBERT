<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmissionActivity"
    android:background="@drawable/submit_bg">

<!--    <WebView-->
<!--        android:id="@+id/formWebview"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"/>-->



    <RelativeLayout
        android:id="@+id/filedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <EditText
            android:id="@+id/firstEdditTxt"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:background="@drawable/edit_bg"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/lastEdditTxt"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_bg"
            android:padding="10dp"/>


        <EditText
            android:id="@+id/emailEdditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:background="@drawable/edit_bg"
            android:padding="10dp"
            android:layout_below="@id/firstEdditTxt"
            android:layout_marginTop="16dp"/>


        <EditText
            android:id="@+id/linkEdditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Project on GITHUB(link)"
            android:background="@drawable/edit_bg"
            android:padding="10dp"
            android:layout_below="@id/emailEdditTxt"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/submitProjectBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/filedView"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:background="@drawable/submit_btn_bg"
        android:textColor="@color/material_white"/>
</RelativeLayout>